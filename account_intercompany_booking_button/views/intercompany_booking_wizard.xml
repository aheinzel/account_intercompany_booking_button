<odoo>
  <record id="intercompany_booking_wizard_form" model="ir.ui.view">
    <field name="name">intercompany.booking.wizard</field>
    <field name="model">intercompany.booking.wizard</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="scenario_id" domain="[('active', '=', True)]"/>
          <field name="reference" widget="text" placeholder="Reference value ..."/>
          <field name="reconcile_now"/>
        </group>
        <group string="Attachment (optional)">
          <field name="file_data" filename="file_name"/>
          <field name="file_name"/>
        </group>
        <footer>
          <button string="Confirm"
                  name="action_confirm"
                  type="object"
                  class="btn-primary"/>
          <button string="Cancel"
                  special="cancel"
                  class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
