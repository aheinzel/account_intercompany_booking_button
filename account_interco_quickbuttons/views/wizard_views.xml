<odoo>
  <record id="view_interco_quick_run_form" model="ir.ui.view">
    <field name="name">interco.quick.run.form</field>
    <field name="model">interco.quick.run</field>
    <field name="arch" type="xml">
      <form string="Quick Interco Booking">
        <group>
          <field name="template"/>
          <field name="ref"/>
          <field name="statement_line_id" required="1"/>
        </group>
        <footer>
          <button name="action_run" type="object" string="Post Entries" class="btn-primary"/>
          <button string="Cancel" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>