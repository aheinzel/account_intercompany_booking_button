<odoo>
    <record id="res_config_settings_view_form_interco_quick" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.interco.quick</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Insert a new block inside the Accounting app container -->
            <xpath expr="//app[@name='account']" position="inside">
                <block title="Intercompany Quick Buttons" name="interco_quickbuttons_block">
                    <setting id="interco_quickbuttons_setting" string="Enable Intercompany Quick Buttons" help="Show one-click intercompany booking wizard on bank statement lines.">
                        <div class="content-group">
                            <field name="interco_quickbuttons_enabled"/>
                            <label for="interco_quickbuttons_enabled"/>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
