<odoo>
    <record id="res_config_settings_view_form_interco_quick" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.interco.quick</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Ultra-robust: inject into the main sheet -->
            <xpath expr="//form//sheet" position="inside">
                <group string="Intercompany Quick Buttons">
                    <field name="interco_quickbuttons_enabled"/>
                    <label for="interco_quickbuttons_enabled"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
