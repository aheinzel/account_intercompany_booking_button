
<odoo>
    <record id="res_config_settings_view_form_interco_quick" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.interco.quick</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Intercompany Quick Buttons" string="Intercompany Quick Buttons">
                    <h2>Intercompany Quick Buttons</h2>
                    <p>This module provides fixed buttons for Food/Groceries and Childcare intercompany bookings.</p>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
