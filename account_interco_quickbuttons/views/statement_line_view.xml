<odoo>
  <!-- Bind the wizard to the Action menu of bank statement lines -->
  <record id="action_open_interco_quick_wizard_stmt_bind" model="ir.actions.act_window">
    <field name="name">Quick Interco Booking</field>
    <field name="res_model">interco.quick.run</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="binding_model_id" ref="account.model_account_bank_statement_line"/>
    <field name="binding_type">action</field>
    <field name="context">{'default_statement_line_id': active_id}</field>
  </record>

<!-- Bind the wizard to the Action menu of journal entries (account.move) as well -->
<record id="action_open_interco_quick_wizard_move_bind" model="ir.actions.act_window">
  <field name="name">Quick Interco Booking</field>
  <field name="res_model">interco.quick.run</field>
  <field name="view_mode">form</field>
  <field name="target">new</field>
  <field name="binding_model_id" ref="account.model_account_move"/>
  <field name="binding_type">action</field>
  <!-- No need to compute context here; default_get maps account.move -> statement_line_id -->
</record>

</odoo>