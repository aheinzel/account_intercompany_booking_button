<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- Window action to open the interco wizard (uses active_id) -->
<record id="action_open_interco_allocate_wizard" model="ir.actions.act_window">
  <field name="name">Inter-co allocate</field>
  <field name="res_model">interco.allocate.wizard</field>
  <field name="view_mode">form</field>
  <field name="target">new</field>
  <field name="context">{'default_statement_line_id': active_id}</field>
</record>
<!-- Server action to open intercompany moves for the active statement line -->
  <record id="action_view_interco_moves_server" model="ir.actions.server">
    <field name="name">View Interco Moves</field>
    <field name="model_id" ref="account.model_account_bank_statement_line"/>
    <field name="state">code</field>
    <field name="code"><![CDATA[
action = {
    'name': 'Intercompany Moves',
    'type': 'ir.actions.act_window',
    'res_model': 'account.move',
    'view_mode': 'list,form',
    'domain': [('id', 'in', records.interco_move_ids.ids)],
}
]]></field>
  </record>

<!-- Window action to open the interco wizard (uses active_id) -->
<!-- Inherit reconcile view: add allocate + view buttons in statusbar -->
  <record id="view_bank_stmt_line_reconcile_inherit_interco" model="ir.ui.view">
    <field name="name">account.bank.statement.line.reconcile.interco</field>
    <field name="model">account.bank.statement.line</field>
    <field name="inherit_id" ref="account_reconcile_oca.bank_statement_line_form_reconcile_view"/>
    <field name="arch" type="xml">
      <xpath expr="//div[contains(@class,'o_account_reconcile_oca_statusbar')]//div[contains(@class,'o_statusbar_buttons')]" position="inside">
        <button name="%(account_bank_interco_buttons.action_open_interco_allocate_wizard)d" type="action"
                string="Inter-co allocate"
                class="btn btn-secondary mx-1"
                invisible="is_reconciled"/>
        <button name="%(account_bank_interco_buttons.action_view_interco_moves_server)d" type="action" class="btn btn-outline-info mx-1" string="View interco moves"/>
      </xpath>
    </field>
  </record>

<!-- Inherit wizard form to enforce per-company domains/contexts -->
<record id="view_interco_allocate_line_tree" model="ir.ui.view">
  <field name="name">interco.allocate.wizard.line.tree</field>
  <field name="model">interco.allocate.wizard.line</field>
  <field name="arch" type="xml">
    <list editable="bottom">
      <field name="company_id"/>
      <field name="percent"/>
      <field name="src_expense_account_id" context="{'company_id': src_company_id.id, 'allowed_company_ids':[src_company_id.id]}"/>
      <field name="src_interco_ar_account_id" context="{'company_id': src_company_id.id, 'allowed_company_ids':[src_company_id.id]}"/>
      <field name="src_journal_id" context="{'company_id': src_company_id.id, 'allowed_company_ids':[src_company_id.id]}"/>
      <field name="dst_expense_account_id" context="{'company_id': company_id.id, 'allowed_company_ids':[company_id.id]}"/>
      <field name="dst_interco_ap_account_id" context="{'company_id': company_id.id, 'allowed_company_ids':[company_id.id]}"/>
      <field name="dst_journal_id" context="{'company_id': company_id.id, 'allowed_company_ids':[company_id.id]}"/>
    </list>
  </field>
</record>
<record id="view_interco_allocate_line_form" model="ir.ui.view">
  <field name="name">interco.allocate.wizard.line.form</field>
  <field name="model">interco.allocate.wizard.line</field>
  <field name="arch" type="xml">
    <form string="Allocation line">
      <group>
        <field name="company_id"/>
        <field name="percent"/>
      </group>
      <group string="Source (statement company)">
        <field name="src_journal_id" context="{'company_id': src_company_id.id, 'allowed_company_ids':[src_company_id.id]}"/>
        <field name="src_expense_account_id" context="{'company_id': src_company_id.id, 'allowed_company_ids':[src_company_id.id]}"/>
        <field name="src_interco_ar_account_id" context="{'company_id': src_company_id.id, 'allowed_company_ids':[src_company_id.id]}"/>
      </group>
      <group string="Destination (target company)">
        <field name="dst_journal_id" context="{'company_id': company_id.id, 'allowed_company_ids':[company_id.id]}"/>
        <field name="dst_expense_account_id" context="{'company_id': company_id.id, 'allowed_company_ids':[company_id.id]}"/>
        <field name="dst_interco_ap_account_id" context="{'company_id': company_id.id, 'allowed_company_ids':[company_id.id]}"/>
      </group>
    </form>
  </field>
</record>
<record id="view_interco_allocate_wizard_form_base" model="ir.ui.view">
  <field name="name">interco.allocate.wizard.form.base</field>
  <field name="model">interco.allocate.wizard</field>
  <field name="arch" type="xml">
    <form string="Intercompany Allocation">
      <sheet>
        <group>
          <group>
            <field name="statement_line_id" readonly="1"/>
            <field name="amount"/>
            <field name="currency_id"/>
            <field name="ref_text" placeholder="e.g., Billa Einkauf / Split"/>
          </group>
          <group>
            <field name="reconcile_mode"/>
            <field name="clearing_account_id"/>
            <field name="attach_file" filename="attach_filename"/>
            <field name="attach_filename"/>
          </group>
        </group>
        <group string="Allocations">
          <field name="line_ids" mode="list,form"
                 context="{'form_view_ref':'account_bank_interco_buttons.view_interco_allocate_line_form', 'tree_view_ref':'account_bank_interco_buttons.view_interco_allocate_line_tree'}"/>
        </group>
      </sheet>
      <footer>
        <button string="Create moves" type="object" name="action_create_moves" class="btn-primary"/>
        <button string="Cancel" class="btn-secondary" special="cancel"/>
      </footer>
    </form>
  </field>
</record>
</odoo>