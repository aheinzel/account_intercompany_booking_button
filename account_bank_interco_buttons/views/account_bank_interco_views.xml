<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Inherit the Bank Statement form and inject a per-line button in the lines tree -->
  <record id="view_bank_statement_form_inherit_interco_button" model="ir.ui.view">
    <field name="name">account.bank.statement.form.interco.button</field>
    <field name="model">account.bank.statement</field>
    <field name="inherit_id" ref="account.view_bank_statement_form"/>
    <field name="arch" type="xml">
      <!-- Add a per-row object button into the line tree (works even if inline-edit) -->
      <xpath expr="//field[@name='line_ids']//tree" position="inside">
        <button name="action_open_interco_allocate_wizard"
                type="object"
                string="Interâ€‘co allocate"
                icon="fa-random"
                attrs="{'invisible': [('state','=','reconciled')]}"/>
      </xpath>
    </field>
  </record>
</odoo>